{{define "title"}}Tasks {{end}}
{{define "content"}}
    <div class="mb-3">
        <a href="{{.add_task_url}}" class="btn btn-dark">Create New Task</a>
    </div>
    <div class="mb-3">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Created</th>
                <th scope="col">Results</th>
            </tr>
            </thead>
            <tbody>
            {{range $i,$t := .tasks}}
                <tr>
                    <th scope="row">{{ $i }}</th>
                    <td>{{ $t.Name }}</td>
                    <td class="text-{{if $t.Removed}}danger{{else}}dark{{end}}">{{ capitalize $t.Status }}</td>
                    <td>{{ $t.Created }}</td>
                    <td>{{ if get_results_url $t }}<a href="{{ get_results_url $t }}">Download</a>
                        {{else}}Not available{{end}}
                    </td>
                </tr>
            {{end}}
            </tbody>
        </table>
    </div>
{{end}}