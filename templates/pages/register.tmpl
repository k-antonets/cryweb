{{define "title"}}Registration{{end}}
{{define "content"}}
    <div class="card">
        <main class="card-body">
            <h1 class="card-title">Registration</h1>
            <form action="register" method="post">
                <div class="form-group row">
                    <label for="registerEmail" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="registerEmail" placeholder="your@email.com" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="registerPassword" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" id="registerPassword" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="registerPassword2" class="col-sm-4 col-form-label">Repeat password</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" id="registerPassword2" required>
                    </div>
                </div>
                <div class="form-group row"><label for="registerName" class="col-sm-4 col-form-label">First name</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Fist name" id="registerName" required>
                    </div>
                </div>
                <div class="form-group row"><label for="registerLastName" class="col-sm-4 col-form-label">Last name</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Last name" id="registerLastName" required>
                    </div>
                </div>
                <div class="form-group row"><label for="registerOrganisation" class="col-sm-4 col-form-label">Organisation</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Organisation" id="registerOrganisation" required>
                    </div>
                </div>
                <div class="form-group row"><label for="registerCountry" class="col-sm-4 col-form-label">Country</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Country" id="registerCountry" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <button class="btn btn-dark">Sign up</button>
                    </div>
                    <col-sm-6><a href="/" class="btn btn-link">Cancel</a></col-sm-6>
                </div>
            </form>
        </main>
    </div>
{{end}}