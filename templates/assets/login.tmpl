{{ define "login" }}
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Login</h3>
            <form action="/login" method="post">
                <div class="form-group row">
                    <label for="loginEmail" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="loginEmail" placeholder="your@email.com">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="loginPassword" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="loginPassword" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <button class="btn btn-dark" type="submit">Sign in</button>
                    </div>
                    <div class="col-sm-6">
                        <a href="/register" class="btn btn-link">Register</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{{ end }}